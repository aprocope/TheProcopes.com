{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,
    "settings": {
        "appearanceTools": true,
        "color": {
            "defaultPalette": false,
            "defaultGradients": false,
            "defaultDuotone": false,
            "palette": [
                {
                    "slug": "primary",
                    "color": "#141414",
                    "name": "Museum Black"
                },
                {
                    "slug": "secondary",
                    "color": "#1F1F22",
                    "name": "Deep Charcoal"
                },
                {
                    "slug": "tertiary",
                    "color": "#B08D57",
                    "name": "Burnished Gold"
                },
                {
                    "slug": "surface",
                    "color": "#2E2522",
                    "name": "Espresso Brown"
                },
                {
                    "slug": "deep-olive",
                    "color": "#2C332A",
                    "name": "Deep Olive Shadow"
                },
                {
                    "slug": "bronze",
                    "color": "#8C6B3F",
                    "name": "Aged Bronze"
                },
                {
                    "slug": "ivory",
                    "color": "#EDE6DA",
                    "name": "Soft Ivory"
                },
                {
                    "slug": "stone",
                    "color": "#CFC7BA",
                    "name": "Warm Stone"
                },
                {
                    "slug": "muted",
                    "color": "#9E9488",
                    "name": "Dust Taupe"
                }
            ],
            "gradients": [
                {
                    "slug": "museum-hero",
                    "gradient": "linear-gradient(180deg, #141414 0%, #2E2522 100%)",
                    "name": "Museum Hero"
                },
                {
                    "slug": "gold-shimmer",
                    "gradient": "linear-gradient(135deg, #B08D57 0%, #8C6B3F 100%)",
                    "name": "Gold Shimmer"
                }
            ],
            "duotone": [
                {
                    "slug": "museum-tone",
                    "colors": ["#141414", "#EDE6DA"],
                    "name": "Museum Black and Ivory"
                },
                {
                    "slug": "espresso-gold",
                    "colors": ["#2E2522", "#B08D57"],
                    "name": "Espresso and Gold"
                }
            ]
        },
        "typography": {
            "fluid": true,
            "defaultFontSizes": false,
            "fontFamilies": [
                {
                    "fontFamily": "'Playfair Display', Georgia, serif",
                    "slug": "heading",
                    "name": "Heading",
                    "fontFace": [
                        {
                            "fontFamily": "Playfair Display",
                            "fontWeight": "400 700",
                            "fontStyle": "normal",
                            "fontStretch": "normal",
                            "src": ["https://fonts.gstatic.com/s/playfairdisplay/v37/nuFvD-vYSZviVYUb_rj3ij__anPXJzDwcbmjWBN2PKdFvXDXbtM.woff2"]
                        },
                        {
                            "fontFamily": "Playfair Display",
                            "fontWeight": "400 700",
                            "fontStyle": "italic",
                            "fontStretch": "normal",
                            "src": ["https://fonts.gstatic.com/s/playfairdisplay/v37/nuFRD-vYSZviVYUb_rj3ij__anPXDTnCjmHKM4nYO7KN_qiTbtbK-F2rA0s.woff2"]
                        }
                    ]
                },
                {
                    "fontFamily": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
                    "slug": "body",
                    "name": "Body",
                    "fontFace": [
                        {
                            "fontFamily": "Inter",
                            "fontWeight": "300 700",
                            "fontStyle": "normal",
                            "fontStretch": "normal",
                            "src": ["https://fonts.gstatic.com/s/inter/v18/UcCO3FwrK3iLTeHuS_nVMrMxCp50SjIw2boKoduKmMEVuLyfAZ9hiJ-Ek-_EeA.woff2"]
                        }
                    ]
                }
            ],
            "fontSizes": [
                {
                    "slug": "small",
                    "size": "0.875rem",
                    "name": "Small",
                    "fluid": {
                        "min": "0.813rem",
                        "max": "0.875rem"
                    }
                },
                {
                    "slug": "medium",
                    "size": "1rem",
                    "name": "Medium",
                    "fluid": {
                        "min": "0.938rem",
                        "max": "1rem"
                    }
                },
                {
                    "slug": "large",
                    "size": "1.25rem",
                    "name": "Large",
                    "fluid": {
                        "min": "1.125rem",
                        "max": "1.25rem"
                    }
                },
                {
                    "slug": "x-large",
                    "size": "1.5rem",
                    "name": "Extra Large",
                    "fluid": {
                        "min": "1.25rem",
                        "max": "1.5rem"
                    }
                },
                {
                    "slug": "xx-large",
                    "size": "2.25rem",
                    "name": "2X Large",
                    "fluid": {
                        "min": "1.75rem",
                        "max": "2.25rem"
                    }
                },
                {
                    "slug": "xxx-large",
                    "size": "3.25rem",
                    "name": "3X Large",
                    "fluid": {
                        "min": "2.25rem",
                        "max": "3.25rem"
                    }
                }
            ]
        },
        "spacing": {
            "units": ["px", "rem", "em", "%", "vw", "vh"],
            "defaultSpacingSizes": false,
            "spacingSizes": [
                {
                    "slug": "10",
                    "size": "0.5rem",
                    "name": "1"
                },
                {
                    "slug": "20",
                    "size": "1rem",
                    "name": "2"
                },
                {
                    "slug": "30",
                    "size": "1.5rem",
                    "name": "3"
                },
                {
                    "slug": "40",
                    "size": "2.5rem",
                    "name": "4"
                },
                {
                    "slug": "50",
                    "size": "4rem",
                    "name": "5"
                },
                {
                    "slug": "60",
                    "size": "6rem",
                    "name": "6"
                }
            ]
        },
        "layout": {
            "contentSize": "720px",
            "wideSize": "1200px"
        },
        "useRootPaddingAwareAlignments": true,
        "dimensions": {
            "minHeight": true
        },
        "position": {
            "sticky": true
        },
        "shadow": {
            "defaultPresets": false,
            "presets": [
                {
                    "slug": "gold-glow",
                    "name": "Gold Glow",
                    "shadow": "0 4px 16px rgba(176, 141, 87, 0.2)"
                },
                {
                    "slug": "deep-lift",
                    "name": "Deep Lift",
                    "shadow": "0 8px 32px rgba(0, 0, 0, 0.4)"
                },
                {
                    "slug": "subtle",
                    "name": "Subtle",
                    "shadow": "0 1px 4px rgba(0, 0, 0, 0.3)"
                }
            ]
        },
        "blocks": {
            "core/button": {
                "border": {
                    "radius": true
                }
            }
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--primary)",
            "text": "var(--wp--preset--color--ivory)"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--body)",
            "fontSize": "var(--wp--preset--font-size--medium)",
            "lineHeight": "1.7"
        },
        "spacing": {
            "padding": {
                "left": "var(--wp--preset--spacing--30)",
                "right": "var(--wp--preset--spacing--30)"
            }
        },
        "elements": {
            "h1": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--heading)",
                    "fontSize": "var(--wp--preset--font-size--xxx-large)",
                    "fontWeight": "700",
                    "lineHeight": "1.2"
                },
                "color": {
                    "text": "var(--wp--preset--color--ivory)"
                },
                "spacing": {
                    "margin": {
                        "top": "0",
                        "bottom": "var(--wp--preset--spacing--30)"
                    }
                }
            },
            "h2": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--heading)",
                    "fontSize": "var(--wp--preset--font-size--xx-large)",
                    "fontWeight": "700",
                    "lineHeight": "1.2"
                },
                "color": {
                    "text": "var(--wp--preset--color--ivory)"
                },
                "spacing": {
                    "margin": {
                        "top": "var(--wp--preset--spacing--40)",
                        "bottom": "var(--wp--preset--spacing--20)"
                    }
                }
            },
            "h3": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--heading)",
                    "fontSize": "var(--wp--preset--font-size--x-large)",
                    "fontWeight": "600",
                    "lineHeight": "1.3"
                },
                "color": {
                    "text": "var(--wp--preset--color--ivory)"
                },
                "spacing": {
                    "margin": {
                        "top": "var(--wp--preset--spacing--30)",
                        "bottom": "var(--wp--preset--spacing--20)"
                    }
                }
            },
            "h4": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--heading)",
                    "fontSize": "var(--wp--preset--font-size--large)",
                    "fontWeight": "600",
                    "lineHeight": "1.4"
                },
                "color": {
                    "text": "var(--wp--preset--color--ivory)"
                }
            },
            "h5": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--heading)",
                    "fontSize": "var(--wp--preset--font-size--medium)",
                    "fontWeight": "600",
                    "lineHeight": "1.4",
                    "textTransform": "uppercase",
                    "letterSpacing": "0.05em"
                },
                "color": {
                    "text": "var(--wp--preset--color--tertiary)"
                }
            },
            "h6": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--body)",
                    "fontSize": "var(--wp--preset--font-size--small)",
                    "fontWeight": "600",
                    "lineHeight": "1.4",
                    "textTransform": "uppercase",
                    "letterSpacing": "0.1em"
                },
                "color": {
                    "text": "var(--wp--preset--color--muted)"
                }
            },
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--tertiary)"
                },
                "typography": {
                    "textDecoration": "underline"
                },
                ":hover": {
                    "color": {
                        "text": "var(--wp--preset--color--bronze)"
                    }
                },
                ":focus": {
                    "color": {
                        "text": "var(--wp--preset--color--bronze)"
                    },
                    "typography": {
                        "textDecoration": "underline"
                    }
                }
            },
            "button": {
                "color": {
                    "background": "var(--wp--preset--color--tertiary)",
                    "text": "var(--wp--preset--color--primary)"
                },
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--body)",
                    "fontSize": "var(--wp--preset--font-size--small)",
                    "fontWeight": "500",
                    "textTransform": "uppercase",
                    "letterSpacing": "0.1em"
                },
                "border": {
                    "radius": "0"
                },
                "spacing": {
                    "padding": {
                        "top": "1rem",
                        "bottom": "1rem",
                        "left": "2rem",
                        "right": "2rem"
                    }
                },
                ":hover": {
                    "color": {
                        "background": "var(--wp--preset--color--bronze)",
                        "text": "var(--wp--preset--color--primary)"
                    }
                },
                ":focus": {
                    "color": {
                        "background": "var(--wp--preset--color--bronze)",
                        "text": "var(--wp--preset--color--primary)"
                    }
                }
            },
            "caption": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--body)",
                    "fontSize": "var(--wp--preset--font-size--small)",
                    "fontStyle": "italic"
                },
                "color": {
                    "text": "var(--wp--preset--color--muted)"
                }
            }
        },
        "blocks": {
            "core/site-title": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--heading)",
                    "fontSize": "var(--wp--preset--font-size--x-large)",
                    "fontWeight": "700",
                    "textDecoration": "none"
                },
                "elements": {
                    "link": {
                        "color": {
                            "text": "var(--wp--preset--color--tertiary)"
                        },
                        "typography": {
                            "textDecoration": "none"
                        },
                        ":hover": {
                            "color": {
                                "text": "var(--wp--preset--color--ivory)"
                            }
                        }
                    }
                }
            },
            "core/navigation": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--body)",
                    "fontSize": "var(--wp--preset--font-size--small)",
                    "fontWeight": "500",
                    "textTransform": "uppercase",
                    "letterSpacing": "0.05em"
                },
                "elements": {
                    "link": {
                        "color": {
                            "text": "var(--wp--preset--color--stone)"
                        },
                        "typography": {
                            "textDecoration": "none"
                        },
                        ":hover": {
                            "color": {
                                "text": "var(--wp--preset--color--tertiary)"
                            }
                        }
                    }
                }
            },
            "core/post-title": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--heading)",
                    "fontWeight": "700"
                },
                "elements": {
                    "link": {
                        "color": {
                            "text": "var(--wp--preset--color--ivory)"
                        },
                        "typography": {
                            "textDecoration": "none"
                        },
                        ":hover": {
                            "color": {
                                "text": "var(--wp--preset--color--tertiary)"
                            }
                        }
                    }
                }
            },
            "core/post-date": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--small)",
                    "textTransform": "uppercase",
                    "letterSpacing": "0.05em"
                },
                "color": {
                    "text": "var(--wp--preset--color--muted)"
                }
            },
            "core/post-author-name": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--small)"
                },
                "color": {
                    "text": "var(--wp--preset--color--muted)"
                }
            },
            "core/post-terms": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--small)",
                    "textTransform": "uppercase",
                    "letterSpacing": "0.05em"
                },
                "elements": {
                    "link": {
                        "color": {
                            "text": "var(--wp--preset--color--tertiary)"
                        }
                    }
                }
            },
            "core/quote": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--heading)",
                    "fontSize": "var(--wp--preset--font-size--large)",
                    "fontStyle": "italic"
                },
                "color": {
                    "text": "var(--wp--preset--color--stone)"
                },
                "border": {
                    "left": {
                        "width": "4px",
                        "color": "var(--wp--preset--color--tertiary)"
                    }
                },
                "spacing": {
                    "padding": {
                        "left": "var(--wp--preset--spacing--30)"
                    }
                }
            },
            "core/pullquote": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--heading)",
                    "fontSize": "var(--wp--preset--font-size--x-large)",
                    "fontStyle": "italic"
                },
                "color": {
                    "text": "var(--wp--preset--color--ivory)"
                },
                "border": {
                    "top": {
                        "width": "2px",
                        "color": "var(--wp--preset--color--tertiary)"
                    },
                    "bottom": {
                        "width": "2px",
                        "color": "var(--wp--preset--color--tertiary)"
                    }
                },
                "spacing": {
                    "padding": {
                        "top": "var(--wp--preset--spacing--30)",
                        "bottom": "var(--wp--preset--spacing--30)"
                    }
                }
            },
            "core/separator": {
                "color": {
                    "background": "var(--wp--preset--color--tertiary)"
                },
                "border": {
                    "width": "0"
                }
            },
            "core/image": {
                "border": {
                    "radius": "0"
                }
            },
            "core/code": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--small)"
                },
                "color": {
                    "background": "var(--wp--preset--color--secondary)",
                    "text": "var(--wp--preset--color--stone)"
                },
                "spacing": {
                    "padding": {
                        "top": "var(--wp--preset--spacing--30)",
                        "bottom": "var(--wp--preset--spacing--30)",
                        "left": "var(--wp--preset--spacing--30)",
                        "right": "var(--wp--preset--spacing--30)"
                    }
                }
            }
        }
    },
    "templateParts": [
        {
            "name": "header",
            "title": "Header",
            "area": "header"
        },
        {
            "name": "footer",
            "title": "Footer",
            "area": "footer"
        }
    ],
    "customTemplates": [
        {
            "name": "front-page",
            "title": "Front Page",
            "postTypes": ["page"]
        },
        {
            "name": "blank",
            "title": "Blank",
            "postTypes": ["page", "post"]
        },
        {
            "name": "no-title",
            "title": "No Title",
            "postTypes": ["page", "post"]
        }
    ]
}

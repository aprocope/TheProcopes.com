{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,
    "settings": {
        "appearanceTools": true,
        "color": {
            "palette": [
                {
                    "slug": "primary",
                    "color": "#1C1C1E",
                    "name": "Deep Charcoal"
                },
                {
                    "slug": "secondary",
                    "color": "#3A2F2A",
                    "name": "Warm Espresso"
                },
                {
                    "slug": "tertiary",
                    "color": "#B08D57",
                    "name": "Burnished Gold"
                },
                {
                    "slug": "background",
                    "color": "#D5C5AD",
                    "name": "Sandy Dusk"
                },
                {
                    "slug": "surface",
                    "color": "#E4D8C6",
                    "name": "Warm Linen"
                },
                {
                    "slug": "muted",
                    "color": "#7A6E62",
                    "name": "Muted"
                }
            ],
            "gradients": [
                {
                    "slug": "primary-to-tertiary",
                    "gradient": "linear-gradient(135deg, #1C1C1E 0%, #B08D57 100%)",
                    "name": "Charcoal to Gold"
                },
                {
                    "slug": "light-overlay",
                    "gradient": "linear-gradient(180deg, rgba(213,197,173,0) 0%, rgba(213,197,173,1) 100%)",
                    "name": "Sandy Overlay"
                }
            ],
            "duotone": [
                {
                    "slug": "primary-and-background",
                    "colors": ["#1C1C1E", "#F1EDE6"],
                    "name": "Charcoal and Ivory"
                },
                {
                    "slug": "secondary-and-tertiary",
                    "colors": ["#3A2F2A", "#B08D57"],
                    "name": "Espresso and Gold"
                }
            ]
        },
        "typography": {
            "fluid": true,
            "fontFamilies": [
                {
                    "fontFamily": "'Playfair Display', Georgia, serif",
                    "slug": "heading",
                    "name": "Heading",
                    "fontFace": [
                        {
                            "fontFamily": "Playfair Display",
                            "fontWeight": "400 700",
                            "fontStyle": "normal",
                            "fontStretch": "normal",
                            "src": ["https://fonts.gstatic.com/s/playfairdisplay/v37/nuFvD-vYSZviVYUb_rj3ij__anPXJzDwcbmjWBN2PKdFvXDXbtM.woff2"]
                        },
                        {
                            "fontFamily": "Playfair Display",
                            "fontWeight": "400 700",
                            "fontStyle": "italic",
                            "fontStretch": "normal",
                            "src": ["https://fonts.gstatic.com/s/playfairdisplay/v37/nuFRD-vYSZviVYUb_rj3ij__anPXDTnCjmHKM4nYO7KN_qiTbtbK-F2rA0s.woff2"]
                        }
                    ]
                },
                {
                    "fontFamily": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
                    "slug": "body",
                    "name": "Body",
                    "fontFace": [
                        {
                            "fontFamily": "Inter",
                            "fontWeight": "300 700",
                            "fontStyle": "normal",
                            "fontStretch": "normal",
                            "src": ["https://fonts.gstatic.com/s/inter/v18/UcCO3FwrK3iLTeHuS_nVMrMxCp50SjIw2boKoduKmMEVuLyfAZ9hiJ-Ek-_EeA.woff2"]
                        }
                    ]
                }
            ],
            "fontSizes": [
                {
                    "slug": "small",
                    "size": "0.875rem",
                    "name": "Small",
                    "fluid": {
                        "min": "0.813rem",
                        "max": "0.875rem"
                    }
                },
                {
                    "slug": "medium",
                    "size": "1rem",
                    "name": "Medium",
                    "fluid": {
                        "min": "0.938rem",
                        "max": "1rem"
                    }
                },
                {
                    "slug": "large",
                    "size": "1.25rem",
                    "name": "Large",
                    "fluid": {
                        "min": "1.125rem",
                        "max": "1.25rem"
                    }
                },
                {
                    "slug": "x-large",
                    "size": "1.5rem",
                    "name": "Extra Large",
                    "fluid": {
                        "min": "1.25rem",
                        "max": "1.5rem"
                    }
                },
                {
                    "slug": "xx-large",
                    "size": "2.25rem",
                    "name": "2X Large",
                    "fluid": {
                        "min": "1.75rem",
                        "max": "2.25rem"
                    }
                },
                {
                    "slug": "xxx-large",
                    "size": "3.25rem",
                    "name": "3X Large",
                    "fluid": {
                        "min": "2.25rem",
                        "max": "3.25rem"
                    }
                }
            ]
        },
        "spacing": {
            "units": ["px", "rem", "em", "%", "vw", "vh"],
            "spacingSizes": [
                {
                    "slug": "10",
                    "size": "0.5rem",
                    "name": "1"
                },
                {
                    "slug": "20",
                    "size": "1rem",
                    "name": "2"
                },
                {
                    "slug": "30",
                    "size": "1.5rem",
                    "name": "3"
                },
                {
                    "slug": "40",
                    "size": "2.5rem",
                    "name": "4"
                },
                {
                    "slug": "50",
                    "size": "4rem",
                    "name": "5"
                },
                {
                    "slug": "60",
                    "size": "6rem",
                    "name": "6"
                }
            ]
        },
        "layout": {
            "contentSize": "720px",
            "wideSize": "1200px"
        },
        "useRootPaddingAwareAlignments": true,
        "blocks": {
            "core/button": {
                "border": {
                    "radius": true
                }
            }
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--background)",
            "text": "var(--wp--preset--color--secondary)"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--body)",
            "fontSize": "var(--wp--preset--font-size--medium)",
            "lineHeight": "1.7"
        },
        "spacing": {
            "padding": {
                "left": "var(--wp--preset--spacing--30)",
                "right": "var(--wp--preset--spacing--30)"
            }
        },
        "elements": {
            "h1": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--heading)",
                    "fontSize": "var(--wp--preset--font-size--xxx-large)",
                    "fontWeight": "700",
                    "lineHeight": "1.2"
                },
                "color": {
                    "text": "var(--wp--preset--color--secondary)"
                },
                "spacing": {
                    "margin": {
                        "top": "0",
                        "bottom": "var(--wp--preset--spacing--30)"
                    }
                }
            },
            "h2": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--heading)",
                    "fontSize": "var(--wp--preset--font-size--xx-large)",
                    "fontWeight": "700",
                    "lineHeight": "1.2"
                },
                "color": {
                    "text": "var(--wp--preset--color--secondary)"
                },
                "spacing": {
                    "margin": {
                        "top": "var(--wp--preset--spacing--40)",
                        "bottom": "var(--wp--preset--spacing--20)"
                    }
                }
            },
            "h3": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--heading)",
                    "fontSize": "var(--wp--preset--font-size--x-large)",
                    "fontWeight": "600",
                    "lineHeight": "1.3"
                },
                "color": {
                    "text": "var(--wp--preset--color--secondary)"
                },
                "spacing": {
                    "margin": {
                        "top": "var(--wp--preset--spacing--30)",
                        "bottom": "var(--wp--preset--spacing--20)"
                    }
                }
            },
            "h4": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--heading)",
                    "fontSize": "var(--wp--preset--font-size--large)",
                    "fontWeight": "600",
                    "lineHeight": "1.4"
                },
                "color": {
                    "text": "var(--wp--preset--color--secondary)"
                }
            },
            "h5": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--heading)",
                    "fontSize": "var(--wp--preset--font-size--medium)",
                    "fontWeight": "600",
                    "lineHeight": "1.4",
                    "textTransform": "uppercase",
                    "letterSpacing": "0.05em"
                },
                "color": {
                    "text": "var(--wp--preset--color--primary)"
                }
            },
            "h6": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--body)",
                    "fontSize": "var(--wp--preset--font-size--small)",
                    "fontWeight": "600",
                    "lineHeight": "1.4",
                    "textTransform": "uppercase",
                    "letterSpacing": "0.1em"
                },
                "color": {
                    "text": "var(--wp--preset--color--muted)"
                }
            },
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--primary)"
                },
                "typography": {
                    "textDecoration": "underline"
                },
                ":hover": {
                    "color": {
                        "text": "var(--wp--preset--color--secondary)"
                    }
                },
                ":focus": {
                    "color": {
                        "text": "var(--wp--preset--color--secondary)"
                    },
                    "typography": {
                        "textDecoration": "underline"
                    }
                }
            },
            "button": {
                "color": {
                    "background": "var(--wp--preset--color--primary)",
                    "text": "var(--wp--preset--color--surface)"
                },
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--body)",
                    "fontSize": "var(--wp--preset--font-size--small)",
                    "fontWeight": "500",
                    "textTransform": "uppercase",
                    "letterSpacing": "0.1em"
                },
                "border": {
                    "radius": "0"
                },
                "spacing": {
                    "padding": {
                        "top": "1rem",
                        "bottom": "1rem",
                        "left": "2rem",
                        "right": "2rem"
                    }
                },
                ":hover": {
                    "color": {
                        "background": "var(--wp--preset--color--secondary)",
                        "text": "var(--wp--preset--color--surface)"
                    }
                },
                ":focus": {
                    "color": {
                        "background": "var(--wp--preset--color--secondary)",
                        "text": "var(--wp--preset--color--surface)"
                    }
                }
            },
            "caption": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--body)",
                    "fontSize": "var(--wp--preset--font-size--small)",
                    "fontStyle": "italic"
                },
                "color": {
                    "text": "var(--wp--preset--color--muted)"
                }
            }
        },
        "blocks": {
            "core/site-title": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--heading)",
                    "fontSize": "var(--wp--preset--font-size--x-large)",
                    "fontWeight": "700",
                    "textDecoration": "none"
                },
                "elements": {
                    "link": {
                        "color": {
                            "text": "var(--wp--preset--color--tertiary)"
                        },
                        "typography": {
                            "textDecoration": "none"
                        },
                        ":hover": {
                            "color": {
                                "text": "var(--wp--preset--color--surface)"
                            }
                        }
                    }
                }
            },
            "core/navigation": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--body)",
                    "fontSize": "var(--wp--preset--font-size--small)",
                    "fontWeight": "500",
                    "textTransform": "uppercase",
                    "letterSpacing": "0.05em"
                },
                "elements": {
                    "link": {
                        "color": {
                            "text": "var(--wp--preset--color--surface)"
                        },
                        "typography": {
                            "textDecoration": "none"
                        },
                        ":hover": {
                            "color": {
                                "text": "var(--wp--preset--color--tertiary)"
                            }
                        }
                    }
                }
            },
            "core/post-title": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--heading)",
                    "fontWeight": "700"
                },
                "elements": {
                    "link": {
                        "color": {
                            "text": "var(--wp--preset--color--secondary)"
                        },
                        "typography": {
                            "textDecoration": "none"
                        },
                        ":hover": {
                            "color": {
                                "text": "var(--wp--preset--color--primary)"
                            }
                        }
                    }
                }
            },
            "core/post-date": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--small)",
                    "textTransform": "uppercase",
                    "letterSpacing": "0.05em"
                },
                "color": {
                    "text": "var(--wp--preset--color--muted)"
                }
            },
            "core/post-author-name": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--small)"
                },
                "color": {
                    "text": "var(--wp--preset--color--muted)"
                }
            },
            "core/post-terms": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--small)",
                    "textTransform": "uppercase",
                    "letterSpacing": "0.05em"
                },
                "elements": {
                    "link": {
                        "color": {
                            "text": "var(--wp--preset--color--primary)"
                        }
                    }
                }
            },
            "core/quote": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--heading)",
                    "fontSize": "var(--wp--preset--font-size--large)",
                    "fontStyle": "italic"
                },
                "color": {
                    "text": "var(--wp--preset--color--secondary)"
                },
                "border": {
                    "left": {
                        "width": "4px",
                        "color": "var(--wp--preset--color--primary)"
                    }
                },
                "spacing": {
                    "padding": {
                        "left": "var(--wp--preset--spacing--30)"
                    }
                }
            },
            "core/pullquote": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--heading)",
                    "fontSize": "var(--wp--preset--font-size--x-large)",
                    "fontStyle": "italic"
                },
                "color": {
                    "text": "var(--wp--preset--color--secondary)"
                },
                "border": {
                    "top": {
                        "width": "2px",
                        "color": "var(--wp--preset--color--primary)"
                    },
                    "bottom": {
                        "width": "2px",
                        "color": "var(--wp--preset--color--primary)"
                    }
                },
                "spacing": {
                    "padding": {
                        "top": "var(--wp--preset--spacing--30)",
                        "bottom": "var(--wp--preset--spacing--30)"
                    }
                }
            },
            "core/separator": {
                "color": {
                    "background": "var(--wp--preset--color--tertiary)"
                },
                "border": {
                    "width": "0"
                }
            },
            "core/image": {
                "border": {
                    "radius": "0"
                }
            },
            "core/code": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--small)"
                },
                "color": {
                    "background": "var(--wp--preset--color--tertiary)",
                    "text": "var(--wp--preset--color--secondary)"
                },
                "spacing": {
                    "padding": {
                        "top": "var(--wp--preset--spacing--30)",
                        "bottom": "var(--wp--preset--spacing--30)",
                        "left": "var(--wp--preset--spacing--30)",
                        "right": "var(--wp--preset--spacing--30)"
                    }
                }
            }
        }
    },
    "templateParts": [
        {
            "name": "header",
            "title": "Header",
            "area": "header"
        },
        {
            "name": "footer",
            "title": "Footer",
            "area": "footer"
        }
    ],
    "customTemplates": [
        {
            "name": "front-page",
            "title": "Front Page",
            "postTypes": ["page"]
        },
        {
            "name": "blank",
            "title": "Blank",
            "postTypes": ["page", "post"]
        },
        {
            "name": "no-title",
            "title": "No Title",
            "postTypes": ["page", "post"]
        }
    ]
}
